<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/destinationImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/restaurantsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurants"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/nightlifeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nightlife"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/peoplesFavoriteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="People's Favorite"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/attractionsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attractions"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/weatherButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weather"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
