<!-- res/layout/homepage.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#B5EDED">


    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to TravelGuideApp!"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/inter_bold"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/welcome1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your adventure starts here! Whether you're exploring vibrant cities, uncovering hidden gems, or planning your perfect getaway, we're here to guide every step of your journey"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/inter_regular"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/welcomeText"
        android:layout_marginTop="20dp" />
    <ImageView
        android:id="@+id/middleImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/correct"
        android:layout_below="@id/welcome1Text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Explore"
        android:layout_below="@id/welcome1Text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:backgroundTint="#00796B"/>

</RelativeLayout>
